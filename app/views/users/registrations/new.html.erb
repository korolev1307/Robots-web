<h2>Регистрация</h2>
<div class = "container align-center">
  <br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="form-grop">
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :Пароль %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> символов минимум)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control"%>
  </div>

  <div class="field">
    <%= f.label :Подтвердите_пароль %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"%>
  </div>
  
  <div class="field">
    <%= f.label :Фамилия %><br />
    <%= f.text_field :surname, class: "form-control"%>
  </div>

  <div class="field">
    <%= f.label :Имя %><br />
    <%= f.text_field :name, class: "form-control"%>
  </div>

  <div class="field">
    <%= f.label :Отчество %><br />
    <%= f.text_field :patronymic, class: "form-control"%>
  </div>

  <div class="field">
    <%= f.label :Телефон %><br />
    <%= f.number_field :telephone, class: "form-control"%>
  </div>

    <div class="field">
    <%= f.label :Ваша_организация %><br />
    <%= f.text_field :organisation, class: "form-control"%>
  </div>
</div>
<br />
  <div class="actions">
    <%= f.submit "Зарегестрировать", class:"btn btn-primary form-control"%>
  </div>

</div>
<% end %>
